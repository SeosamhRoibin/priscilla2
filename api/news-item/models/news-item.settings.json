{
  "kind": "collectionType",
  "collectionName": "news_items",
  "info": {
    "name": "NewsItem"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "Title": {
      "type": "string"
    },
    "Content": {
      "type": "richtext"
    },
    "DateOfPublication": {
      "type": "date"
    },
    "Photographs": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    }
  }
}
